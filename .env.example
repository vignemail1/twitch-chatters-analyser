# Environnement
APP_ENV=dev

# Base de données MySQL
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_DATABASE=twitch_chatters
MYSQL_USER=twitch
MYSQL_PASSWORD=twitchpass

# Twitch OAuth2
# Créez une application sur https://dev.twitch.tv/console/apps
# Scopes nécessaires : user:read:moderated_channels moderator:read:chatters
TWITCH_CLIENT_ID=votre_client_id_ici
TWITCH_CLIENT_SECRET=votre_client_secret_ici
TWITCH_REDIRECT_URL=http://localhost:8080/auth/callback

# Sécurité
# Changez cette valeur en production !
APP_SESSION_SECRET=change-me-in-production

# Hostname pour Traefik (optionnel)
# TCA_HOSTNAME=twitch-analyser.local

# Worker configuration
JOB_POLL_INTERVAL=2

# Rate limiting (si service twitch-api implémenté)
# RATE_LIMIT_REQUESTS_PER_MINUTE=600
