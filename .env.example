# Environnement (production ou development)
APP_ENV=production

# Base de données MariaDB
MYSQL_ROOT_PASSWORD=changeme_root_password
MYSQL_DATABASE=twitch_chatters
MYSQL_USER=twitch
MYSQL_PASSWORD=changeme_db_password

# Twitch OAuth
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_REDIRECT_URL=https://twitch-chatters.vignemail1.eu/auth/callback

# Session secret (générer avec: openssl rand -base64 32)
APP_SESSION_SECRET=changeme_session_secret

# Traefik / Let's Encrypt
ACME_EMAIL=admin@vignemail1.eu

# Auth basique dashboard Traefik (user: admin, password: changeme)
# Générer avec: echo $(htpasswd -nB admin) | sed -e s/\$/\$\$/g
TRAEFIK_AUTH=admin:$$2y$$05$$qH9S4qMxRbW5KxG5jZLxTOpkH.4YLbXn1A8RvKVH8FqCqVzWHFKRi

# Domaine (automatiquement détecté selon APP_ENV)
# Production: twitch-chatters.vignemail1.eu
# Dev: twitch-chatters-dev.vignemail1.eu

# Rate limiting Twitch API (req/sec)
RATE_LIMIT_REQUESTS_PER_SECOND=10

# Worker polling interval (secondes)
JOB_POLL_INTERVAL=2

# Cache TTL (secondes)
CACHE_TTL_SECONDS=300
